<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Mouse"
    tools:ignore="HardcodedText" >

    <View
        android:id="@+id/Area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Der"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/gris" />

    <Button
        android:id="@+id/Der"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Izq"
        android:layout_alignBottom="@+id/Izq"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:text=" Click Derecho "
        android:onClick="clickDerecho" />

    <Button
        android:id="@+id/Izq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Area"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="49dp"
        android:text="Click Izquierdo" 
        android:onClick="clickIzquierdo" />

</RelativeLayout>